@{
    ViewData["Title"] = "Movie Form";
}
@model Movie;

<form method="post">
    <input type="hidden" asp-for="MovieId" />

    <div class="input-group">
        <label asp-for="CategoryId" class="input-group-text">Category</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <div class="input-group">
        <label asp-for="Title" class="input-group-text">Title</label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="input-group">
        <label asp-for="Year" class="input-group-text">Year</label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="input-group">
        <label asp-for="Director" class="input-group-text">Director</label>
        <input asp-for="Director" type="text" class="form-control" />
    </div>

    <div class="input-group">
        <label asp-for="Rating" class="input-group-text">Rating</label>
        <select asp-for="Rating" class="form-select">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="TV-G">TV-G</option>
            <option value="TV-Y7">TV-Y7</option>
            <option value="TV-PG">TV-PG</option>
            <option value="TV-14">TV-14</option>
            <option value="UR">UR</option>
            <option value="NR">NR</option>
        </select>
    </div>

    <div class="input-group">
        <label asp-for="Edited" class="input-group-text">Edited</label>
        <select asp-for="Edited" class="form-select">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="input-group">
        <label asp-for="LentTo" class="input-group-text">Lent To</label>
        <input asp-for="LentTo" type="text" class="form-control" />
    </div>

    <div class="input-group">
        <label asp-for="CopiedToPlex" class="input-group-text">Copied to Plex?</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="input-group">
        <label asp-for="Notes" class="input-group-text">Notes</label>
        <input asp-for="Notes" type="text" maxlength="25" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-outline-primary">Submit</button>
</form>